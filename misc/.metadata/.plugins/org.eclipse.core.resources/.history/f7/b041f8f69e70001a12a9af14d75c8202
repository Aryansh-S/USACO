#include <iostream>
#include <cstdio>
#include <utility>
#include <algorithm>
using namespace std;

typedef long long ll;
typedef pair<int,int> pii;
#define pb push_back
#define mp make_pair
#define f first
#define s second

#define problemname "socdist"
#define maxn 100000
#define maxm 100000

int n,m,d; pii loc[maxm];

bool operator<(const int&x, const pii&p){
	if(x<p.s) return 1;
	return 0;
}
bool operator>(const int&x, const pii&p){
	if(x>p.s) return 1;
	return 0;
}
bool operator==(const int&x, const pii&p){
	if(x==p.s) return 1;
	return 0;
}
bool operator<=(const int&x, const pii&p){
	if(x<p || x==p) return 1;
	return 0;
}
bool operator>=(const int&x, const pii&p){
	if(x>p || x==p) return 1;
	return 0;
}

bool test(int mid){ //try placing with minimum distance mid
	int pos=loc[0].f, ctr=1;
	while(ctr!=m){ //we need to place m cows
		if(lower_bound(loc,loc+m,pos+mid)-loc!=m){
			if(loc[lower_bound(loc,loc+m,pos+mid)-loc].f>pos+mid) pos=loc[lower_bound(loc,loc+m,pos+mid)-loc];
			else pos=pos+mid;
		}
		else return 0;
		ctr++;
	}
	return 1;
}

int main(){
	ios_base::sync_with_stdio(0); cin.tie(0);
	//freopen(problemname ".in", "r", stdin); freopen(problemname ".out", "w", stdout);

	cin >> n >> m;
	for(int i=0; i<m; i++){int a,b; cin >> a >> b; loc[i]=mp(a,b);}
	sort(loc,loc+m); //binary search for d


	return 0;
}
