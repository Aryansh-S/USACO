/*
 #include <iostream>
#include <queue>
#include <utility>
using namespace std;

#define maxn 100000
#define maxm 100000
typedef pair<int,int> pii;
#define f first
#define s second
int n,m,ans,choice[maxn]; queue<int> cereal[maxm],cows; pair<int,int> cowvals[maxn];
bool firstcheck[maxm]; //look at cow i

int main(){
  cin >> n >> m;
  for(int i=0; i<n; i++){
    int a,b; cin >> a >> b; a--,b--; cows.push(i);
    cowvals[i].f=a; cowvals[i].s=b;
    cereal[a].push(i); cereal[b].push(i);
    if(!firstcheck[a]){
      firstcheck[a]=1;
      choice[i]=1; ans++;

    }
    else if(!firstcheck[b]){
      firstcheck[b]=1;
      choice[i]=2; ans++;
    }
    else choice[i]=3;
  }
  while(!cows.empty()){
    cout << ans << "\n";
    ans--; //cereals has cow number
    cereal[cowvals[cows.front()].f].pop(); //update for leave
    //choice[cereal[cowvals[cows.front()].f].front()]
    if(choice[cereal[cowvals[cows.front()].f].front()]==3){
      //figure out if it's first or second choice
      if(cowvals[cereal[cowvals[cows.front()].f].front()].f==cowvals[cows.front()].f){
        choice[cereal[cowvals[cows.front()].f].front()]=1;
        //revive the first cow for second choice
        if(choice[cereal[cowvals[cereal[cowvals[cows.front()].f].front()].s].front()]==3){
          ans++;
          choice[cereal[cowvals[cereal[cowvals[cows.front()].f].front()].s].front()]=2;
        }
      }
      else choice[cereal[cowvals[cows.front()].f].front()]=2;
      ans++;
    }
    cows.pop();
  }
  return 0; //if not at the front, doesn't get cereal
}
 * /
 */
